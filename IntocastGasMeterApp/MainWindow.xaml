<Window x:Class="IntocastGasMeterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Properties="clr-namespace:IntocastGasMeterApp.Properties"
        xmlns:local="clr-namespace:IntocastGasMeterApp"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Closed="MainWindow_Closed"
        Height="600" 
        Width="1000"        
        Background="{StaticResource BackgroundColorBrush}" >
    <Grid>
        <!-- The Frame will be used for navigation -->
        <StackPanel x:Name="AuthContent" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label Margin="0,0,0,30" FontSize="25" HorizontalContentAlignment="Center">Prihlásenie</Label>
            <local:AuthControl IsMain="True"></local:AuthControl>
        </StackPanel>
        <Frame Visibility="Hidden" x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
