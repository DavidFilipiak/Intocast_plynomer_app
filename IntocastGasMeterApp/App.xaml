<Application x:Class="IntocastGasMeterApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IntocastGasMeterApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
                    <Color x:Key="BackgroundColor">#E3E3E3</Color>
                    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource BackgroundColor}"/>
                    <Color x:Key="ElementColor">#FAFAFA</Color>
                    <SolidColorBrush x:Key="ElementColorBrush" Color="{StaticResource ElementColor}"/>
                    <Color x:Key="PrimaryColor">#CB3737</Color>
                    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}"/>
                    <Color x:Key="SecondaryColor">#EE6F57</Color>
                    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
                    <LinearGradientBrush x:Key="RedGradientBrush" StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
                    </LinearGradientBrush>
                    <LinearGradientBrush x:Key="RedGradientBrushVert" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource SecondaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="1"/>
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="PrimaryColorLight" Color="{StaticResource PrimaryColor}" Opacity="0.2"/>


                </ResourceDictionary>
                
                <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
                    <Style x:Key="BaseLoginInputStyle" TargetType="Control">
                        <Setter Property="Background" Value="{StaticResource ElementColorBrush}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColorBrush}"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Padding" Value="5,0,5,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Control">
                                    <Border CornerRadius="15"
                                            Margin="{TemplateBinding Margin}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="LoginTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseLoginInputStyle}"/>
                    <Style x:Key="LoginPasswordStyle" TargetType="PasswordBox" BasedOn="{StaticResource BaseLoginInputStyle}"/>
                    <Style x:Key="BaseInputStyle" TargetType="Control">
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border BorderBrush="{StaticResource RedGradientBrush}" BorderThickness="0,0,0,2">
                                        <Border BorderBrush="{StaticResource BackgroundColorBrush}" BorderThickness="1,1,1,0">
                                            <ScrollViewer Background="White" x:Name="PART_ContentHost"/>
                                        </Border>
                                    </Border>
                                </ControlTemplate>                                
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource BaseInputStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <!-- ToggleButton to open/close the dropdown -->
                                        <Border BorderBrush="{StaticResource RedGradientBrush}" BorderThickness="0,0,0,2">
                                            <Border BorderBrush="{StaticResource BackgroundColorBrush}" BorderThickness="1,1,1,0">
                                                <ToggleButton x:Name="ToggleButton" 
                                                    Background="White" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    HorizontalContentAlignment="Left"
                                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                    ClickMode="Press">
                                                    <DockPanel>
                                                        <!-- ContentPresenter to display selected item -->
                                                        <ContentPresenter DockPanel.Dock="Left" Content="{TemplateBinding SelectionBoxItem}"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Width="150"
                                                            Margin="4,0,20,0"/>

                                                        <!-- Chevron Icon -->
                                                        <Path x:Name="ChevronIcon" DockPanel.Dock="Right" Data="M 0 0 L 4 4 L 8 0 Z" Fill="Gray" Width="8" Height="4"
                                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                                            Margin="0,0,6,0"/>
                                                    </DockPanel>
                                                </ToggleButton>
                                            </Border>
                                        </Border>

                                        <!-- Popup containing the dropdown items -->
                                        <Popup x:Name="Popup" 
                                            Placement="Bottom" 
                                            IsOpen="{TemplateBinding IsDropDownOpen}" 
                                            Width="200"
                                            AllowsTransparency="True">
                                            <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                <ScrollViewer>
                                                    <!-- ItemsPresenter displays ComboBox items -->
                                                    <ItemsPresenter />
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="MainPageComboBox" TargetType="ComboBox" BasedOn="{StaticResource BaseInputStyle}">
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <!-- ToggleButton to open/close the dropdown -->
                                        <Border BorderBrush="{StaticResource RedGradientBrush}" BorderThickness="0,0,0,0">
                                            <Border BorderBrush="{StaticResource BackgroundColorBrush}" BorderThickness="1,1,1,1">
                                                <ToggleButton x:Name="ToggleButton" 
                                                    Background="White" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    HorizontalContentAlignment="Left"
                                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                    ClickMode="Press">
                                                    <DockPanel>
                                                        <!-- ContentPresenter to display selected item -->
                                                        <ContentPresenter DockPanel.Dock="Left" Content="{TemplateBinding SelectionBoxItem}"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Width="130"
                                                            Margin="0"/>

                                                        <!-- Chevron Icon -->
                                                        <Path x:Name="ChevronIcon" DockPanel.Dock="Right" Data="M 0 0 L 4 4 L 8 0 Z" Fill="Gray" Width="10" Height="4"
                                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                                            Margin="0"/>
                                                    </DockPanel>
                                                </ToggleButton>
                                            </Border>
                                        </Border>

                                        <!-- Popup containing the dropdown items -->
                                        <Popup x:Name="Popup" 
                                            Placement="Bottom" 
                                            IsOpen="{TemplateBinding IsDropDownOpen}" 
                                            Width="150"
                                            AllowsTransparency="True">
                                            <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                <ScrollViewer>
                                                    <!-- ItemsPresenter displays ComboBox items -->
                                                    <ItemsPresenter />
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        
                    </Style>
                    <Style x:Key="MainPageButton" TargetType="Button">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BackgroundColorBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="LoginButton" TargetType="Button">
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="{StaticResource RedGradientBrushVert}"/>
                        <Setter Property="Foreground" Value="{StaticResource ElementColorBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="BackButton" TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <DockPanel Background="{TemplateBinding Background}">
                                        <!-- Chevron Icon -->
                                        <Path x:Name="ChevronIcon" DockPanel.Dock="Left" Data="M 10 0 L 0 5 L 10 10 L 8 8 L 4 5 L 8 2 Z" Fill="Black" Width="10" Height="10"
                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                            Margin="0,0,6,0"/>

                                        <!-- ContentPresenter to display selected item -->
                                        <ContentPresenter DockPanel.Dock="Right"
                                            Content="Späť"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Width="150"
                                            Margin="4,0,20,0"/>
                                    </DockPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="DarkGray"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="GroupBorder" TargetType="Border">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="Background" Value="{StaticResource ElementColorBrush}"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="1" Opacity="0.3"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="LegendLine" TargetType="Border">
                        <Setter Property="Width" Value="30"/>
                        <Setter Property="Height" Value="3"/>
                        <Setter Property="CornerRadius" Value="1"/>
                        <Setter Property="Margin" Value="0,0,10,5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <RotateTransform Angle="-30" CenterX="15" CenterY="2"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="Dot" TargetType="Border">
                        <Setter Property="Width" Value="16"/>
                        <Setter Property="Height" Value="16"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Margin" Value="0,0,10,5"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                    <Style x:Key="HorizontalDivider" TargetType="Border">
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Margin" Value="0,15,0,15"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                        <Setter Property="Opacity" Value="0.5"/>
                    </Style>

                    <Style x:Key="TabControlStyle" TargetType="TabControl">
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                    <Style x:Key="TabItemStyle" TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="TabItemBorder" BorderThickness="0,0,0,2" Margin="5,0,5,0" Padding="2" CornerRadius="2">
                                        <ContentPresenter
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            />                                        
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="TabItemBorder" Property="BorderBrush" Value="{StaticResource RedGradientBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="TabItemBorder" Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="TabItemBorder" Property="Background" Value="{StaticResource BackgroundColorBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>                        
                    </Style>

                    <Style x:Key="ValueLabel" TargetType="Label">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="MaxHeight" Value="30"/>
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="ExtraBold"/>
                    </Style>
                    <Style x:Key="ValueNameLabel" TargetType="Label">
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                    </Style>
                    <Style x:Key="GroupNameLabel" TargetType="Label">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="{StaticResource RedGradientBrush}"/>
                    </Style>
                    <Style x:Key="SettingsGroupNameLabel" TargetType="Label" BasedOn="{StaticResource GroupNameLabel}">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontSize" Value="20"/>
                    </Style>
                    <Style x:Key="TabItemHeaderLabel" TargetType="Label" BasedOn="{StaticResource GroupNameLabel}">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
