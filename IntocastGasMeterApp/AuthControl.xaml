<UserControl x:Class="IntocastGasMeterApp.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntocastGasMeterApp"
             mc:Ignorable="d" Width="220" Height="Auto" Background="Transparent">
    
    <StackPanel Width="200" Height="Auto" Margin="10">
        <Label>Použivateľské meno</Label>
        <TextBox x:Name="TextBox_username" Style="{StaticResource InputTextBoxStyle}"></TextBox>       
        <Label>Heslo</Label>
        <PasswordBox x:Name="TextBox_password" Style="{StaticResource InputPasswordStyle}"></PasswordBox>

        <Button Margin="0,50,0,0" Width="200" Click="Login" Style="{StaticResource PrimaryButton}">Prihlásiť</Button>
    </StackPanel>
</UserControl>
