<UserControl x:Class="IntocastGasMeterApp.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntocastGasMeterApp"
             mc:Ignorable="d" Width="Auto" Height="Auto" Background="Transparent">

    <Border Style="{StaticResource GroupBorder}" Padding="40" Width="300" Height="Auto">
        <StackPanel>
            <Label>Použivateľské meno</Label>
            <TextBox x:Name="TextBox_username" Style="{StaticResource InputTextBoxStyle}"></TextBox>
            <Label Margin="0,5,0,0">Heslo</Label>
            <PasswordBox x:Name="TextBox_password" Style="{StaticResource InputPasswordStyle}"></PasswordBox>

            <Button Margin="0,50,0,0" Width="150" Height="30" Click="Login" Style="{StaticResource LoginButton}">Prihlásiť</Button>
        </StackPanel>
    </Border>    
</UserControl>
